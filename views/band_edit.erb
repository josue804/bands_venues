<h1>Edit <%= @band.name %></h1>

<form action="/bands/<%= @band.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div class="form-group">
    <label for="name">Band Name</label>
    <input type="text" class="form-control" name="name" value="<%= @band.name %>">
  </div>

  <div class="form-group">
    <label for="style">Style</label>
    <input type="text" class="form-control" name="style" value="<%= @band.style %>">
  </div>

  <div class="form-group">
    <label for="lead">Lead</label>
    <input type="text" class="form-control" name="lead" value="<%= @band.lead %>">
  </div>

  <button type="submit" class="btn btn-primary btn-md">Update</button>
</form>
